@page "/profile"
@using Microsoft.EntityFrameworkCore
@using SferumNet.Components.Modal
@using SferumNet.Components.Pages.Components
@using SferumNet.Components.Pages.ModalsSc
@using SferumNet.DbModels.Common
@using SferumNet.DbModels.Enum
@using SferumNet.DbModels.Scenarios
@using SferumNet.DbModels.Services
@using SferumNet.DbModels.Vk

@inject IDialogService DialogService
@inject SferumNetContext Ef;
@inject NavigationManager Navigation;

<PageTitle>Сценарии пользователя: @_currentProfile.Name</PageTitle>


<MudText Typo="Typo.h4" GutterBottom="true">Сценарии пользователя: @_currentProfile.Name</MudText>

<MudPaper Elevation="5">
    <MudToolBar>
        <MudIconButton OnClick="OpenModalCreateSc" Icon="@Icons.Material.Outlined.Add"/>
        <MudIconButton OnClick="() => OpenModalEditProfile()" Icon="@Icons.Material.Outlined.Edit"/>
        <MudIconButton Icon="@Icons.Material.Outlined.Remove" Color="Color.Inherit"/>
    </MudToolBar>
</MudPaper>

@if (_scenarios != null)
{
    <MudExpansionPanels Elevation="5" Class="mt-4" MultiExpansion="true">
        @foreach (var scenario in _scenarios)
        {
            <MudExpansionPanel Text="@scenario.Title">
                <MudTabs Elevation="0" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
                    <MudTabPanel Text="Действия">
                        <MudText>По расписанию с @scenario.TimeStart до @scenario.TimeEnd</MudText>
                        <MudText>Активен: @(scenario.IsActive ? "Да" : "Нет")</MudText>
                        <MudButton OnClick="() => OpenModalEditSc(scenario)" Variant="Variant.Outlined" Color="Color.Primary">Редактировать</MudButton>
                        <MudButton OnClick="() => OpenModalDeleteSc(scenario)" Variant="Variant.Outlined" Color="Color.Primary">Удалить</MudButton>
                    </MudTabPanel>
                    <MudTabPanel Text="Статистика">
                        @{
                            var s = GetStatsLabels();
                            var charts = GetStatsCharts(scenario.Id);
                            <MudChart ChartType="ChartType.Line" ChartSeries="charts" XAxisLabels="s" Width="100%" Height="450px"/>
                        }
                    </MudTabPanel>
                    <MudTabPanel Text="Логи">
                        @foreach (var log in GetLogsAsync(scenario.Id).GetAwaiter().GetResult())
                        {
                            string buildStrLabel = $"{log.DateTime} {log.Type}";
                            <MudTextField T="string" ReadOnly="true" Label="@buildStrLabel" Variant="Variant.Filled" Text="@log.Message" Lines="1" Adornment="Adornment.End"/>
                        }
                    </MudTabPanel>
                </MudTabs>
            </MudExpansionPanel>
        }
    </MudExpansionPanels>
}
else
{
    <MudProgressLinear Color="Color.Secondary" Indeterminate="true" Class="my-7"/>
}

@code {

    [Parameter] [SupplyParameterFromQuery] public int Id { get; set; }
    private VkProfile _currentProfile = new VkProfile();
    private ICollection<Scenario>? _scenarios;

    protected override async Task OnInitializedAsync()
    {
        await LoadDbProfile();
        await LoadScenarios();
    }

    private async Task LoadDbProfile()
    {
        _currentProfile = await Ef.VkProfiles.FirstOrDefaultAsync(x => x.Id == Id) ?? new VkProfile();
    }

    private async Task LoadScenarios()
    {
        _scenarios = await Ef.Scenarios.Where(x => x.IdProfile == Id).ToListAsync();
    }

    private async void OpenModalEditProfile()
    {
        var parameters = new DialogParameters<ModalAddProfile> { { "Profile", new VkProfile { Id = Id } } };
        var dialog = await DialogService.ShowAsync<ModalAddProfile>("Настройка профиля", parameters);
        await dialog.Result;
        RefreshPage();
    }

    private async void OpenModalCreateSc()
    {
        var parameters = new DialogParameters<ModalScWelcome> { { "Sc", new Welcome { IdProfile = Id } } };
        var dialog = await DialogService.ShowAsync<ModalScWelcome>("Новый сценарий", parameters);
        await dialog.Result;
        RefreshPage();
    }


    private async void OpenModalEditSc(Scenario scenario)
    {
        if (scenario is Welcome)
        {
            var parameters = new DialogParameters<ModalScWelcome> { { "Sc", new Welcome { Id = scenario.Id } } };
            var dialog = await DialogService.ShowAsync<ModalScWelcome>("Редактировать", parameters);
            await dialog.Result;
        }

        // ETC

        RefreshPage();
    }

    private void RefreshPage()
    {
        Navigation.NavigateTo($"/profile?id={Id}", true);
    }

    private List<ChartSeries> GetStatsCharts(long idSc)
    {
        return new List<ChartSeries>
        {
            new()
            {
                Name = "Успешно",
                Data = GetCountLogByType(idSc, EventType.Success)
            },

            new()
            {
                Name = "Ошибки",
                Data = GetCountLogByType(idSc, EventType.Error)
            }
        };
        ;
    }

    private double[] GetCountLogByType(long idSc, EventType logType)
    {
        var data = new List<double>();
        var days = 14;
        for (int i = 0; i < days; i++)
        {
            data.Add(Ef.Logs.Count(x => x.IdScenario == idSc && x.DateTime.Date == DateTime.Now.AddDays(-i).Date && x.Type == logType));
        }

        return data.ToArray();
    }

    private string[] GetStatsLabels()
    {
        var days = 14;
        var labels = new List<string>();
        for (int i = 0; i < days; i++)
        {
            labels.Add(DateTime.Now.AddDays(-i).ToString("dd.MM"));
        }

        return labels.ToArray();
    }

    private async Task<IReadOnlyList<Log>> GetLogsAsync(long idSc)
    {
        var result = await Ef.Logs.Where(x => x.IdScenario == idSc)
            .OrderByDescending(x => x.DateTime)
            .Take(10)
            .ToListAsync();

        return result;
    }

    private async Task OpenModalDeleteSc(Scenario scenario)
    {
        var dialog = await DialogService.ShowAsync<ModalConfirmDialog>();
        var valueResult = await dialog.Result;

        if (valueResult.Data is null)
            return;

        if ((bool)valueResult.Data)
            await ProccessToDeleteScAsync(scenario.Id);

        RefreshPage();
    }

    private async Task ProccessToDeleteScAsync(long idSc)
    {
        var scDb = await Ef.Scenarios
            .FirstOrDefaultAsync(x => x.Id == idSc);

        if (scDb is null)
            return;

        Ef.Remove(scDb);
        await Ef.SaveChangesAsync();
    }

}